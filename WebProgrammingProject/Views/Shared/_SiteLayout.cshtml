                    </div>
                </div>
            </div>

            <div class="col-sm  bg-dark p-3 min-vh-100">
                <!-- PAGE CONTENT-->
                <div>
                    <main class="">
                        @RenderBody()
                    </main>

                    <footer class="border-top footer text-muted">
                        <div class="container">
                            &copy; 2024 - WebProgrammingProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
